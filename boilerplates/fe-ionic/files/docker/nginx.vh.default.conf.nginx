server {
    listen       8080;
    server_name  localhost;

    location / {
      root /docroot;
      index  index.html;
      # this is for angular
      try_files $uri$args $uri$args/ $uri $uri/ /index.html =404;
    }

    error_page  404              /index.html;
    # redirect server error pages to the static page /50x.html
    #
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
}
